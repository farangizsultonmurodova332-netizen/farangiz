# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production
DJANGO_DEBUG=0
DJANGO_SETTINGS_MODULE=crowdbank.settings.production
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost

# Database
POSTGRES_DB=crowdbank
POSTGRES_USER=crowdbank
POSTGRES_PASSWORD=your-strong-database-password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# CORS & CSRF (update with your domain)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://your-domain.com

# Security (set to 1 when using HTTPS)
SECURE_SSL_REDIRECT=0
REFRESH_COOKIE_SECURE=0

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Agora (for voice/video calls)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate
